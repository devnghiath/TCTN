<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/btn_date_write"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_selector_white"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/margin_10">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_cell"
            android:adjustViewBounds="true"
            android:src="@drawable/ico_date_plus" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10"
            android:text="Xem ngày ghi chỉ số nước"
            android:textColor="@color/txt_black"
            android:textSize="@dimen/text_16" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_selector_white"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/margin_10">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_cell"
            android:adjustViewBounds="true"
            android:src="@drawable/ico_date_ok" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10"
            android:text="Xem ngày thu tiền nước"
            android:textColor="@color/txt_black"
            android:textSize="@dimen/text_16" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_selector_white"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/margin_10">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_cell"
            android:adjustViewBounds="true"
            android:src="@drawable/ico_chart" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10"
            android:text="Xem tiến độ giải quyết hồ sơ"
            android:textColor="@color/txt_black"
            android:textSize="@dimen/text_16" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_selector_white"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/margin_10">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_cell"
            android:adjustViewBounds="true"
            android:src="@drawable/ico_report_customer" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10"
            android:text="Xem tiến độ giải quyến đơn thư khách hàng"
            android:textColor="@color/txt_black"
            android:textSize="@dimen/text_16" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_selector_white"
        android:clickable="true"
        android:padding="@dimen/margin_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_toLeftOf="@+id/img_bell">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_cell"
                android:adjustViewBounds="true"
                android:src="@drawable/ico_msg" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10"
                android:text="Tin nhắn báo tin hóa đơn chưa thanh toán"
                android:textColor="@color/txt_black"
                android:textSize="@dimen/text_16" />

        </LinearLayout>

        <ImageView
            android:id="@+id/img_bell"
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/view_bell"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/ico_bell" />
    </RelativeLayout>

</LinearLayout>